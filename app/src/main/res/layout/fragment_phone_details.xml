<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".client.shop.FragmentPhoneDetails">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/ic_baseline_phone_android_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="Телефон"
            app:layout_constraintTop_toBottomOf="@id/iv_phone"/>
        <TextView
            android:id="@+id/txtPhoneSeria"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="Модель"
            app:layout_constraintTop_toBottomOf="@id/txtPhone"/>
        <TextView
            android:id="@+id/txtPhoneCount"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="Кол-во"
            app:layout_constraintTop_toBottomOf="@id/txtPhoneSeria"/>
        <TextView
            android:id="@+id/txtPhonePrice"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="Цена"
            app:layout_constraintTop_toBottomOf="@id/txtPhoneCount"/>

        <Button
            android:id="@+id/buyPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Купить"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPhonePrice" />




    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>