<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".client.profile.FragmentProfile"
    android:background="#FF9800">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/imageProfile"
            android:src="@drawable/ic_baseline_person_24"/>

        <TextView
            android:id="@+id/nameClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Имя клиента"
            app:layout_constraintEnd_toEndOf="@+id/imageProfile"
            app:layout_constraintStart_toStartOf="@+id/imageProfile"
            app:layout_constraintTop_toBottomOf="@+id/addPictureProfile" />

        <TextView
            android:id="@+id/PhoneClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Номер телефона"
            app:layout_constraintEnd_toEndOf="@+id/nameClient"
            app:layout_constraintStart_toStartOf="@+id/nameClient"
            app:layout_constraintTop_toBottomOf="@+id/nameClient" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="почта"
            app:layout_constraintEnd_toEndOf="@+id/PhoneClient"
            app:layout_constraintStart_toStartOf="@+id/PhoneClient"
            app:layout_constraintTop_toBottomOf="@+id/PhoneClient" />

        <TextView
            android:id="@+id/addPictureProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Загрузить фото"
            android:textColor="@color/teal_200"
            app:layout_constraintEnd_toEndOf="@+id/imageProfile"
            app:layout_constraintStart_toStartOf="@+id/imageProfile"
            app:layout_constraintTop_toBottomOf="@id/imageProfile" />

        <Button
            android:id="@+id/exitProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выйти"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            />






    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>